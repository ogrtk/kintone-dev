{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true
  },
  "files": [
    "./node_modules/@kintone/dts-gen/kintone.d.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx",
    "global.d.ts"
  ]
}